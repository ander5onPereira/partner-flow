generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PARTNER
  CUSTOMER
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  role            Role
  createdAt       DateTime  @default(now())
  products        Product[]
  salesAsCustomer Sale[]    @relation("customerSales")
  salesAsPartner  Sale[]    @relation("partnerSales")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  sales     Sale[]
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Sale {
  id         Int      @id @default(autoincrement())
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  customer   User     @relation("customerSales", fields: [customerId], references: [id])
  customerId Int
  partner    User     @relation("partnerSales", fields: [partnerId], references: [id])
  partnerId  Int
  value      Float
  createdAt  DateTime @default(now())
}
